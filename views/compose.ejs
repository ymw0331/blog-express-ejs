        <div class="form-group">
            <label>Title</label>
            <input type="text" name="postTitle" class="form-control">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea class="form-control" rows="5" cols="30" type="text" name="postBody"></textarea>
        </div>
